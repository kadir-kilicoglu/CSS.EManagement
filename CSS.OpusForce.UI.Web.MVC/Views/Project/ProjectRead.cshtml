@using CSS.OpusForce.Services.ViewModels;
@model ProjectView

@{
    ViewBag.Title = "Proje Detay";
    Layout = "~/Views/Shared/_Layout.cshtml";   
}

<div id="header-band" class="bg-blue">    
   @Html.ActionLink("Projeler", "ProjectList", "Project", null, new { Class = "btnBack" })
   @Html.ActionLink("Anasayfa", "Index", "Home", null, new { Class = "btnHome" })   
   <div class="ym-wrapper">
       <div class="ym-grid top-35">
           <div class="ym-gl">
               <img alt="OpusForce Logo" src="@Url.Content("~/Content/images/logo.png")" />
           </div>
           <div class="ym-gr">
               @Html.ActionLink("Home", "Index", "Home", null, new { Class = "btnLogin" })
           </div>
       </div> 
   </div>           
</div>
<div class="clearfix"></div>
<div id="main">
    <div class="ym-wrapper">        
        <div class="ym-hlist">
          <ul>
            <li class="active">@Html.ActionLink("Projeler", "ProjectList", "Project", null, null)</li>
            <li>@Html.ActionLink("Proje Türleri", "ProjectTypeList", "Project", null, null)</li>
            <li>@Html.ActionLink("Proje Durumları", "ProjectStatusList", "Project", null, null)</li>
          </ul>
        </div>
        <hr />

        @if ((bool)TempData["Add"])
        {
            <p class="box success">Tebrikler! Kayıt Başarıyla Oluşturuldu.</p>
            <hr />
        }
        @if ((bool)TempData["Update"])
        {
            <p class="box success">Tebrikler! Kayıt Başarıyla Güncelleştirildi.</p>
            <hr />
        }
        
        <div class="ym-grid ym-gbox">
            <div class="ym-g38 ym-gl"><b>Proje No.</b></div><div class="ym-g62 ym-gr">: @Model.Id</div>
        </div>
        <div class="ym-grid">
            <hr class="thick" />
        </div>
        <div class="ym-grid ym-gbox">
            <div class="ym-g38 ym-gl"><b>Proje Adı</b></div><div class="ym-g62 ym-gr">: @Model.Name</div>
        </div>
        <div class="ym-grid">
            <hr class="thick" />
        </div>
        <div class="ym-grid ym-gbox">
            <div class="ym-g38 ym-gl"><b>Proje Açıklaması</b></div><div class="ym-g62 ym-gr">: @Model.Description</div>
        </div>
        <div class="ym-grid">
            <hr class="thick" />
        </div>
        <div class="ym-grid ym-gbox">
            <div class="ym-g38 ym-gl"><b>Projenin Bağlı Olduğu Firma</b></div><div class="ym-g62 ym-gr">: @Model.CompanyName</div>
        </div>
        <div class="ym-grid">
            <hr class="thick" />
        </div>
        <div class="ym-grid ym-gbox">
            <div class="ym-g38 ym-gl"><b>Proje Türü</b></div><div class="ym-g62 ym-gr">: @Model.ProjectTypeName</div>
        </div>
        <div class="ym-grid">
            <hr class="thick" />
        </div>
        <div class="ym-grid ym-gbox">
            <div class="ym-g38 ym-gl"><b>Proje Durumu</b></div><div class="ym-g62 ym-gr">: @Model.ProjectStatusName</div>
        </div>
        <div class="ym-grid">
            <hr class="thick" />
        </div>
        <div class="ym-grid ym-gbox">
            <div class="ym-g38 ym-gl"><b>Proje Başlangıç Tarihi</b></div><div class="ym-g62 ym-gr">: @Model.StartDate</div>
        </div>
        <div class="ym-grid">
            <hr class="thick" />
        </div>
        <div class="ym-grid ym-gbox">
            <div class="ym-g38 ym-gl"><b>Proje Bitiş Tarihi</b></div><div class="ym-g62 ym-gr">: @Model.EndDate</div>
        </div>
        <div class="ym-grid">
            <hr class="thick" />
        </div>
        <div class="ym-grid">
             @Html.ActionLink("Geri dön", "ProjectList", "Project", null, new { Class = "ym-button ym-left-arrow" })
             @Html.ActionLink("Düzenle", "ProjectUpdate", "Project", new { id = Model.Id }, new { Class = "ym-button ym-edit" })
        </div>        
    </div>
</div>